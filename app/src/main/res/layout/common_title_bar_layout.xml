<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="CommonTitleBar"
            type="com.example.myapplication.CommonTitleBar" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="40dp"
        android:background="@color/transparency"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="51dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/but_back_nor_selector" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="22dp"
            tools:text="Title"
            android:visibility="visible"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_right"
            android:layout_toEndOf="@id/iv_back"
            android:gravity="start"
            android:hint="Search for time zone....."
            android:textColorHint="@color/color_ffffff_20"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@null"
            android:visibility="gone"
            android:textCursorDrawable="@drawable/time_zone_cursor"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="51dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@mipmap/ic_search"/>




    </RelativeLayout>

</layout>